    <script>
        // Function to toggle checkbox state
        function toggleCheck(box) {
            box.classList.toggle('checked');
        }
        
        // Function to download as PDF (original version)
        function downloadPDF() {
            const element = document.getElementById('tracker-content');
            
            // Options for PDF generation
            const options = {
                margin: 0.5,
                filename: '2026-Quilt-Project-Tracker.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { 
                    scale: 2,
                    useCORS: true,
                    logging: false
                },
                jsPDF: { 
                    unit: 'in', 
                    format: 'letter', 
                    orientation: 'portrait' 
                }
            };
            
            // Generate and download PDF
            html2pdf().set(options).from(element).save();
            
            // Show feedback
            const btn = document.querySelector('.pdf-btn');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg> Downloaded!';
            btn.style.backgroundColor = '#7a9c7a';
            
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.style.backgroundColor = '#b5a48b';
            }, 2000);
        }
        
        // Modal functions
        function showExportModal() {
            document.getElementById('exportModal').style.display = 'flex';
        }
        
        function closeExportModal() {
            document.getElementById('exportModal').style.display = 'none';
        }
        
        // Function to get clean text from contenteditable elements
        function getCleanText(element) {
            if (!element) return '';
            const text = element.innerText || element.textContent || '';
            const cleanText = text.replace('Click to edit', '').trim();
            return cleanText || '';
        }
        
        // Function to export to CSV (Google Sheets compatible)
        function exportToCSV() {
            // Collect all data
            const data = collectTrackerData();
            
            // Create CSV content
            let csvContent = "2026 Quilt Project Tracker - Lovely Quilt Co.\n";
            csvContent += `"Exported: ${new Date().toLocaleDateString()}"\n\n`;
            
            // Basic info
            csvContent += "BASIC INFO\n";
            csvContent += `"My Word for 2026","${data.word2026}"\n`;
            csvContent += `"Skill to Master","${data.skillMaster}"\n\n`;
            
            // Projects
            csvContent += "PROJECT QUEUE\n";
            csvContent += '"Project Name","Pattern","Fabric Palette","Goal Finish Date"\n';
            data.projects.forEach(project => {
                csvContent += `"${project.name}","${project.pattern}","${project.fabric}","${project.date}"\n`;
            });
            csvContent += "\n";
            
            // WIP Audit
            csvContent += "WIP AUDIT (Unfinished Projects)\n";
            data.wipAudit.forEach((wip, index) => {
                csvContent += `"WIP ${index + 1}","${wip}"\n`;
            });
            csvContent += "\n";
            
            // Progress Checklist
            csvContent += "PROGRESS CHECKLIST\n";
            data.checklist.forEach(item => {
                const status = item.checked ? "Completed" : "Not Started";
                csvContent += `"${item.task}","${status}"\n`;
            });
            csvContent += "\n";
            
            // Monthly Goals
            csvContent += "MONTHLY MINI-GOALS\n";
            const months = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'];
            const goals = ['Organize Stash', 'Small Project', 'Skill Builder', 'Finish a WIP', 'Sew a Gift', 
                          'Mid-Year Review', 'Holiday Prep', 'Charity Quilt', 'Fall Palette', 
                          'Mastery Project', 'Fast Finishes', 'Reflect & Rest'];
            
            months.forEach((month, index) => {
                csvContent += `"${month}","${goals[index]}"\n`;
            });
            csvContent += "\n";
            
            // Notes
            csvContent += "NOTES & INSPIRATION\n";
            csvContent += `"${data.notes}"\n`;
            
            // Create and download CSV file
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', '2026-Quilt-Project-Tracker.csv');
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            // Close modal and show feedback
            closeExportModal();
            showFeedback('Sheet exported successfully!', 'sheet-btn');
        }
        
        // Function to export to Excel format (actually CSV with Excel extension)
        function exportToExcel() {
            // Collect all data
            const data = collectTrackerData();
            
            // Create CSV content with Excel-friendly formatting
            let csvContent = "SEP=,\n"; // Excel separator
            csvContent += "2026 Quilt Project Tracker - Lovely Quilt Co.\n";
            csvContent += `Exported: ${new Date().toLocaleDateString()}\n\n`;
            
            // Basic info section
            csvContent += "BASIC INFO\n";
            csvContent += "Field,Value\n";
            csvContent += `My Word for 2026,${data.word2026}\n`;
            csvContent += `Skill to Master,${data.skillMaster}\n\n`;
            
            // Projects section
            csvContent += "PROJECT QUEUE\n";
            csvContent += "Project Name,Pattern,Fabric Palette,Goal Finish Date\n";
            data.projects.forEach(project => {
                csvContent += `${project.name},${project.pattern},${project.fabric},${project.date}\n`;
            });
            csvContent += "\n";
            
            // WIP Audit
            csvContent += "WIP AUDIT\n";
            csvContent += "Item,Description\n";
            data.wipAudit.forEach((wip, index) => {
                csvContent += `WIP ${index + 1},${wip}\n`;
            });
            csvContent += "\n";
            
            // Progress Checklist
            csvContent += "PROGRESS CHECKLIST\n";
            csvContent += "Task,Status\n";
            data.checklist.forEach(item => {
                const status = item.checked ? "✓" : " ";
                csvContent += `${item.task},${status}\n`;
            });
            csvContent += "\n";
            
            // Monthly Goals
            csvContent += "MONTHLY GOALS\n";
            csvContent += "Month,Goal\n";
            const months = ['January', 'February', 'March', 'April', 'May', 'June', 
                          'July', 'August', 'September', 'October', 'November', 'December'];
            const goals = ['Organize Stash', 'Small Project', 'Skill Builder', 'Finish a WIP', 'Sew a Gift', 
                          'Mid-Year Review', 'Holiday Prep', 'Charity Quilt', 'Fall Palette', 
                          'Mastery Project', 'Fast Finishes', 'Reflect & Rest'];
            
            months.forEach((month, index) => {
                csvContent += `${month},${goals[index]}\n`;
            });
            csvContent += "\n";
            
            // Notes
            csvContent += "NOTES\n";
            csvContent += `${data.notes}\n`;
            
            // Create and download file with .xls extension (Excel will open it)
            const blob = new Blob([csvContent], { type: 'application/vnd.ms-excel;charset=utf-8' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', '2026-Quilt-Project-Tracker.xls');
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            // Close modal and show feedback
            closeExportModal();
            showFeedback('Excel file downloaded!', 'sheet-btn');
        }
        
        // Function to collect all tracker data
        function collectTrackerData() {
            // Basic info
            const word2026 = getCleanText(document.getElementById('word-2026'));
            const skillMaster = getCleanText(document.getElementById('skill-master'));
            
            // Projects
            const projects = [];
            const projectRows = document.querySelectorAll('#project-table tbody tr');
            projectRows.forEach(row => {
                const cells = row.querySelectorAll('td');
                if (cells.length >= 4) {
                    projects.push({
                        name: getCleanText(cells[0]),
                        pattern: getCleanText(cells[1]),
                        fabric: getCleanText(cells[2]),
                        date: getCleanText(cells[3])
                    });
                }
            });
            
            // WIP Audit
            const wipAudit = [];
            for (let i = 1; i <= 4; i++) {
                const wip = getCleanText(document.getElementById(`wip-${i}`));
                wipAudit.push(wip);
            }
            
            // Checklist
            const checklist = [];
            const checklistItems = document.querySelectorAll('#progress-checklist .check-item');
            checklistItems.forEach(item => {
                const box = item.querySelector('.box');
                const task = item.textContent.replace('✓', '').trim();
                checklist.push({
                    task: task,
                    checked: box.classList.contains('checked')
                });
            });
            
            // Notes
            const notes = document.getElementById('notes').value || '';
            
            return {
                word2026,
                skillMaster,
                projects,
                wipAudit,
                checklist,
                notes
            };
        }
        
        // Function to show feedback
        function showFeedback(message, buttonClass) {
            const btn = document.querySelector(`.${buttonClass}`);
            const originalText = btn.innerHTML;
            btn.innerHTML = `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg> ${message}`;
            
            setTimeout(() => {
                btn.innerHTML = originalText;
            }, 2000);
        }
        
        // Initialize editable fields
        document.addEventListener('DOMContentLoaded', function() {
            const editableCells = document.querySelectorAll('[contenteditable="true"]');
            
            editableCells.forEach(cell => {
                // Add placeholder styling
                if (cell.innerHTML.trim() === '') {
                    cell.innerHTML = '<span style="color: #b5a48b; font-style: italic;">Click to edit</span>';
                }
                
                // Handle focus
                cell.addEventListener('focus', function() {
                    if (this.innerHTML.includes('Click to edit')) {
                        this.innerHTML = '';
                        this.style.color = '#4a3c31';
                    }
                });
                
                // Handle blur
                cell.addEventListener('blur', function() {
                    if (this.innerHTML.trim() === '') {
                        this.innerHTML = '<span style="color: #b5a48b; font-style: italic;">Click to edit</span>';
                    }
                });
            });
            
            // Handle notes textarea
            const notesArea = document.getElementById('notes');
            notesArea.addEventListener('focus', function() {
                if (this.value === '') {
                    this.style.color = '#4a3c31';
                }
            });
            
            // Close modal when clicking outside
            document.getElementById('exportModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeExportModal();
                }
            });
            
            // Add keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                // Ctrl+S or Cmd+S to save as PDF
                if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                    e.preventDefault();
                    downloadPDF();
                }
                // Escape to close modal
                if (e.key === 'Escape') {
                    closeExportModal();
                }
            });
        });
    </script>
</body>
</html>
